{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^1.0.2"
  },
  "scripts": {
    "build:ci": "yarn rw type-check && yarn rw test --no-watch && yarn rw deploy vercel",
    "db": "docker-compose --project-directory ./api/db/dev --project-name rulemaker up",
    "db:stop": "docker-compose --project-directory ./api/db/dev --project-name rulemaker down"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15 <2"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  }
}
